{
  "compilerOptions": {
    "incremental": false,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "vite/client",
      "vitepress",
      "./.vitepress/types/**/*"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "docs/**/*.data.ts",
    "docs/**/*.path.ts",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue"
  ],
  "exclude": ["dist", "node_modules"]
}
